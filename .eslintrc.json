{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "rules": {
        "indent": ["error", 4],
        "object-curly-spacing": ["error", "always"],
        "comma-dangle": ["error", "never"],
        "max-len": "off",
        "require-jsdoc": "off",
        "quotes": ["error", "double"]
    },
    "ignorePatterns": "*.js"
}
